@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="p-5">
    <h2>List of roles </h2>
    <table class="table">
        <thead>
            <tr>
                <th>Roles</th>
                <th>Delete</th>
                <th>
                    <a class="btn btn-success min-w-40" style="text-align:center;" asp-action="Create">Add new role</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>