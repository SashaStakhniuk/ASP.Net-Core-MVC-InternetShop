@model IEnumerable<MVCBikeShop.Models.Bike>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Admin Panel";
}
<h1 style="text-align:center;">Admin Panel</h1>
<a href="~/Admin/Create" class="btn btn-secondary">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
        <tr>
            <td>@bike.BikeTitle</td>
            <td>@bike.Price</td>
            <td><a href="~/Admin/Create/@bike.BikeId" class="btn btn-warning">Edit</a></td>
            <td>
                <form method="post" action="~/Admin/Remove">
                    <input type="hidden" value="@bike.BikeId" name="BikeId"/>
                    <input type="submit" value="Remove" class="btn btn-danger" />

                </form>
            </td>
        </tr>
    }
        </tbody>
    </table>