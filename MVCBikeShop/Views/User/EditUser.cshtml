@using Microsoft.AspNetCore.Identity
@model MVCBikeShop.Models.ViewModels.UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2> Editing @Model.UserEmail</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <input type="hidden" name="curentEditor" value="@Model.CurentEditor" />
    <div>
        @Html.LabelFor(x => x.UserName)
        @Html.TextBoxFor(x => x.UserName)
    </div>
    <div>
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName)
    </div>
    <div>
        @Html.LabelFor(x => x.UserEmail)
        @Html.TextBoxFor(x => x.UserEmail)
    </div>
    <div>
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password)
    </div>

    <div class="form-group">
        <div>Role:</div>
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="radio" name="UserRoles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-success" style="text-align:center;min-width:40%;">Save Changes</button>
</form>